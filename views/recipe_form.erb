<div class="container">
<h2>List of Recipes</h2>

<% @recipes.each() do |recipe| %>
<ul>
  <li><a href="/recipe/<%= recipe.id() %>"><%= recipe.name() %></a></li>
</ul>
<% end %>
</div>


<h2>Add a Recipe</h2>

<form action="/recipe_add" method="post"
  <div class="form-group">
    <label for="name">Recipe Name:</label>
    <input name="name" id="name" type="text"><br>

    <label for="ingredients">Ingredients:</label>
    <input name="ingredients" id="ingredients" type="text"><br>

    <label for="instructions">Instructions:</label>
    <input name="instructions" id="instructions" type="text"><br>

    <label for="rating">Rating:</label>
    <input name="rating" id="rating" type="rating"><br><br>


  <button type="submit" class="btn btn-success">Add Recipe</button>
  </div>
